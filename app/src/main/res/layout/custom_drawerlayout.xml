<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_left"
    android:layout_width="match_parent"
    android:background="@drawable/bg_home5"
    android:layout_height="match_parent">
    <!--主布局-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="600">
        </TextView>
        <LinearLayout
            android:id="@+id/home_page_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:orientation="vertical" >
                <!--<LinearLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical" >-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:text="@string/ele_id"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/ele_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                    <Button
                        android:id="@+id/FaultRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        android:text="@string/faultrecord"/>
                    <Button
                        android:id="@+id/flush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        android:text="@string/refresh_floor"
                       />
                <!--</LinearLayout>-->

                <!--<LinearLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical" >-->

                <!--</LinearLayout>-->
                <!--<GridView-->
                    <!--android:id="@+id/left_gridview"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:layout_marginRight="5dp"-->
                    <!--android:horizontalSpacing="5dip"-->
                    <!--android:listSelector="@null"-->
                    <!--android:numColumns="1"-->
                    <!--android:scrollbars="none"-->
                    <!--android:verticalSpacing="5dip" />-->

            </LinearLayout>
            <View
                android:layout_width="8dip"
                android:layout_height="match_parent"
                 android:layout_marginTop="60dp"
                android:background="#231815"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_floor_show"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/fragement_wall_arrows"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/floor_wall_up_white"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/fragement_wall_floors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dip"
                    android:background="#231815"/>
                <LinearLayout
                    android:id="@+id/fragement_home_door_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_door5"
                    android:orientation="horizontal" >

                    <!--<TextView-->
                        <!--android:layout_width="6dip"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="#231815"/>-->
                    <ImageView
                        android:id="@+id/fragement_home_door_left_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/door_left5"
                        />

                    <ImageView
                        android:id="@+id/fragement_home_door_right_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/door_rigth5"
                        android:layout_weight="1"
                        />
                    <View
                        android:layout_width="8dip"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="#231815"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="60dp"
                android:layout_weight="1"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ll_opendoor"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >


                        <ImageButton
                            android:id="@+id/open_door"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/opendoor"
                            android:textSize="13sp" />

                        <ImageButton
                            android:id="@+id/close_door"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/closedoor"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <GridView
                    android:id="@+id/right_gridview"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="14dp"
                    android:horizontalSpacing="5.0dip"
                    android:listSelector="@null"
                    android:numColumns="1"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5.0dip" />
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#231815" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/index_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:orientation="vertical" >-->

                    <ImageView
                        android:id="@+id/fragement_home_bottom_tap_img_0"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_home_diantimoshi_wuxiao" />

                    <TextView
                        android:id="@+id/fragement_home_bottom_tap_txt_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/control_examine"
                        android:textColor="@color/backColor"
                        android:textSize="12sp" />
                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contcats_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:orientation="vertical" >
                    android:text="@string/elevator_falult"
                    -->

                    <ImageView
                        android:id="@+id/fragement_home_bottom_tap_img_1"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_home_guzhang_wuxiao" />

                    <TextView
                        android:id="@+id/fragement_home_bottom_tap_txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/elevator_falult"
                        android:lines="4"
                        android:textColor="@color/backColor"
                        android:textSize="12sp" />
                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/apply_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:orientation="vertical" >-->

                    <ImageView
                        android:id="@+id/fragement_home_bottom_tap_img_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_home_chaozai_wuxiao" />

                    <TextView
                        android:id="@+id/fragement_home_bottom_tap_txt_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/control_overload"
                        android:textColor="@color/backColor"
                        android:textSize="12sp" />
                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:orientation="vertical" >-->

                    <ImageView
                        android:id="@+id/fragement_home_bottom_tap_img_3"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_home_mensuo_wuxiao" />

                    <TextView
                        android:id="@+id/fragement_home_bottom_tap_txt_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/door_lock"
                        android:textColor="@color/backColor"
                        android:textSize="12sp" />
                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me1_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:orientation="vertical" >-->

                    <ImageView
                        android:id="@+id/fragement_home_bottom_tap_img_4"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_home_pingceng_wuxiao" />

                    <TextView
                        android:id="@+id/fragement_home_bottom_tap_txt_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/leveling"
                        android:textColor="@color/backColor"
                        android:textSize="12sp" />
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--侧滑菜单-->
    <!--<include layout="@layout/activity_test" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_gravity="start">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/pa"

                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />
            <Button
                android:id="@+id/flushinfo"
                android:textAllCaps="false"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:text="@string/flushinfo"
                />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkgray" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/search"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:hint="@string/falult_search"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#3b3b3b"
                android:textColorHint="@color/darkgrey"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/searchdelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/delete_selector"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:background="@color/white" >

            <TextView
                android:id="@+id/tx_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ems="5"
                android:gravity="center"
                android:text="@string/ele_title"
                android:textAlignment="center"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />
            <View
                android:layout_width="1dip"
                android:layout_height="45dp"

                android:layout_toRightOf="@+id/tx_hint2"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/darkgray"/>

            <TextView
                android:id="@+id/edt_2"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tx_hint2"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:gravity="center"
                android:inputType="none"
                android:maxLines="2"
                android:textColor="@color/darkgray"
                android:text="@string/Internal_number"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkgray" />

        <ListView
            android:id="@+id/lv_left_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/darkgray"
            android:dividerHeight="1dp"
            android:text="DrawerLayout"
           />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
