<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_agray"
    android:orientation="vertical" >

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical" >-->

        <TextView
            android:id="@+id/item_fault_title"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tx_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ems="4"
                android:gravity="right"
                android:text="@string/falult_error_code" />

            <TextView
                android:id="@+id/faultcode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tx_1"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue" />
            <TextView
                android:id="@+id/sub_code"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tx_1"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:text=""
                android:visibility="invisible"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tx_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/faultfloor"
                android:ems="4"
                android:gravity="right"
                android:text="@string/falult_error_floor" />

            <TextView
                android:id="@+id/faultfloor"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tx3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:ems="4"
                android:text="@string/falult_error_name" />

            <TextView
                android:id="@+id/faultname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/tx3_1"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tx3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:ems="4"
                android:text="@string/falult_date" />

            <TextView
                android:id="@+id/faulttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/tx3_3"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue" />
        </RelativeLayout>
    <!--</LinearLayout>-->

</LinearLayout>