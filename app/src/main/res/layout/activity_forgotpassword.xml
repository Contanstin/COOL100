<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/above_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/app_bg_color"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white">

            <com.hpmt.cool100.widget.RequiredTextView
                android:id="@+id/tx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ems="5"
                android:text="@string/login_name_username"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tx_name"
                android:background="@color/darkgray" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tx_name"
                android:background="@null"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:gravity="bottom"
                android:hint="@string/login_name_hint1"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkgray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white">

            <com.hpmt.cool100.widget.RequiredTextView
                android:id="@+id/tx_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ems="5"
                android:text="@string/iphone_t"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tx_hint1"
                android:background="@color/darkgray" />

            <EditText
                android:id="@+id/edt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tx_hint1"
                android:background="@null"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:gravity="bottom"
                android:hint="@string/login_name_hint"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkgray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <com.hpmt.cool100.widget.RequiredTextView
                android:id="@+id/tx_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ems="5"
                android:text="@string/psw_new_name"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tx_hint2"
                android:background="@color/darkgray" />

            <EditText
                android:id="@+id/edt_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tx_hint2"
                android:background="@null"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:gravity="bottom"
                android:hint="@string/psw_new_name_hint"
                android:inputType="textPassword"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkgray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <com.hpmt.cool100.widget.RequiredTextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:ems="5"
                android:text="@string/verificty_name"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/txt_3"
                android:background="@color/darkgray" />

            <EditText
                android:id="@+id/edt_f_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="100dp"
                android:layout_toRightOf="@+id/txt_3"
                android:background="@null"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:gravity="bottom"
                android:hint="@string/verificty_name_hint"
                android:inputType="number"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_getNum"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/getok"
                android:textAllCaps="false"
                android:text="@string/getnum_click_name"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkgray" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/logon_bt"
        android:text="@string/submit_click_name"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="13sp" />

</LinearLayout>